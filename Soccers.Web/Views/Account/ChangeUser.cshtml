@model Soccers.Web.Models.EditUserViewModel
@{ ViewData["Title"] = "Edit"; }

<h4>Edit User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeUser" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PicturePath" />

            <partial name="_User" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" style="border-radius: 60px;"/>
                <a asp-action="ChangerPassword" class="btn btn-outline-warning" style="border-radius: 60px;">Change Password</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <img src="@Model.PicturePath" style="width:300px;height:300px;max-width:200%; height: auto;" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
